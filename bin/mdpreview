#!/bin/sh
CONFIG_FILE=$(mktemp)
cat << EOF > ${CONFIG_FILE}
{
    "codehilite":
    {
        "noclasses": true
    }
}
EOF

if [ -f $1 ] ; then
    markdown_py \
        -x codehilite \
        -x fenced_code \
        -x sane_lists \
        -c ${CONFIG_FILE} \
        $1 > /tmp/md.html
    echo "Wrote markdown at $(date)"
fi

if [ -n "$DISPLAY" ] ; then
    refresh.sh "MARKDOWN PREVIEW"
fi

rm ${CONFIG_FILE}
