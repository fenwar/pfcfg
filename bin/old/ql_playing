#!/bin/bash

# Check if quodlibet is running
if quodlibet --status &> /dev/null ; then
    echo "Quod Libet:"
    echo $(quodlibet --print-playing '<~people>')
    echo $(quodlibet --print-playing '<title> (<~length>)')
    echo $(quodlibet --print-playing '<album><date| (<~#year>)><tracknumber| (<tracknumber>)>')
else
    echo ""
fi
