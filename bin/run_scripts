#!/bin/bash
# Generic shell script to run all the executable files in a directory
# Copied from http://www.turnkeylinux.org/blog/generic-shell-hooks

run_scripts()
{
    for script in $1/*; do

        # skip non-executable snippets
        [ -x "$script" ] || continue

        # execute $script in the context of the current shell
        . $script
    done
}

run_scripts $*
