#!/bin/bash

MON_LEFT=HDMI1
MON_PRIMARY=HDMI2
MON_RIGHT=VGA1

RIGHT_ROTATION=normal

killall compiz
killall xfwm4

# wait for compiz or xfwm4 to exit
sleep 2

xrandr --output $MON_PRIMARY --auto --primary
xrandr --output $MON_LEFT --auto --left-of $MON_PRIMARY
xrandr --output $MON_RIGHT --auto --rotate $RIGHT_ROTATION --right-of $MON_PRIMARY

# wait for xrandr to finish adjusting the monitors
sleep 5

compiz --replace &

# wait for compiz to finish starting up
sleep 10

xfce4-panel --restart
