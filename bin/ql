#!/bin/bash
# Quick play script for Quod Libet.

CONTROL_PIPE="$HOME/.quodlibet/control"
quodlibet --unfilter
sleep 0.1

quodlibet --unqueue=/.*/
sleep 0.1

if [[ "$1" == "" || "$1" == "?" ]] ; then
    echo random album >> $CONTROL_PIPE
else
    quodlibet --enqueue="$*"
fi
sleep 0.1

echo next >> $CONTROL_PIPE
