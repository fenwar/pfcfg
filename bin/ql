#!/bin/bash
# Quick play script for Quod Libet.


quodlibet --unfilter
quodlibet --unqueue=/.*/
# Print-queue ensures queue is flushed before we enqueue anything else.
quodlibet --print-queue &>/dev/null


if [[ "$1" == "" || "$1" == "?" ]] ; then
    quodlibet --random=album
else
    quodlibet --enqueue="$*"
fi

quodlibet --next
