! Use lightdm to provide user switching
*newLoginCommand: dm-tool switch-to-greeter

!!!!!!!!!!!!!!!!!!!!!!!!!
! rxvt-unicode settings !
!!!!!!!!!!!!!!!!!!!!!!!!!

! Green text on translucent black background
URxvt*.depth: 32
URxvt*.background: [90]#000000
URxvt*.foreground: #dddddd

! Fix blue for dark backgrounds
URxvt*.color4: #3333ff
URxvt*.color12: #6666ff
URxvt*.colorUL: #eeee55
URxvt*.underlineColor: #555555

URxvt*.geometry: 120x40
URxvt*.scrollBar: false

! Set my default preferred font
URxvt*.font: xft:Source Code Pro:pixelsize=15,style=Regular,antialias=false,\
             xft:Code2000:antialias=false
!URxvt*.font: xft:Ubuntu Mono:pixelsize=16,style=Regular,antialias=true,\
!             xft:Code2000:antialias=false
URxvt*.letterSpace: -1

! Include perl font-size extension
! See https://github.com/majutsushi/urxvt-font-size
URxvt*.perl-ext-common: default,font-size,matcher
URxvt*.keysym.C-equal: perl:font-size:increase
URxvt*.keysym.C-plus: perl:font-size:increase
URxvt*.keysym.C-minus: perl:font-size:decrease
URxvt*.keysym.C-S-Up: perl:font-size:increase
URxvt*.keysym.C-S-Down: perl:font-size:decrease


URxvt.url-launcher: iceweasel

URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C

! Disable iso14755 which is bound to C-S-Up/Down
URxvt*.iso14755: false

URxvt*.cursorColor: #dddd88
URxvt*.cursorBlink: true
URxvt*.cursorUnderline: false
URxvt*.pointerBlank: true
URxvt*.pointerBlankDelay: 10

URxvt*.loginShell: true

URxvt*.iconFile: /usr/share/icons/hicolor/48x48/apps/xfce-terminal.png

! Other settings to experiment with
URxvt*.saveLines: 8192
URxvt*.internalBorder: 2
